@model CakeShop.Models.Category
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "ChiTietDanhMucSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Trang xem chi tiết danh mục sản phẩm</h2>

<div>
    <h4>Danh mục sản phẩm</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="SuaDanhMucSanPham" asp-route-id="@Model.category_id" class="btn btn-primary">Sửa</a> |
    <a asp-action="Index" class="btn btn-secondary">Trở về</a>
</div>
